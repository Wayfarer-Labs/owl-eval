# Local Environment Template
# Copy this file to .env.local and fill in your values

# App URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Stack Auth (get from https://app.stack-auth.com)
NEXT_PUBLIC_STACK_PROJECT_ID=your-project-id-here
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=your-client-key-here
STACK_SECRET_SERVER_KEY=your-server-key-here

# Database
DATABASE_URL="postgresql://owl_user:owl_password@localhost:5432/evaluation?sslmode=disable"

# Storage (Tigris)
TIGRIS_BUCKET_NAME=your-bucket-name
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_ENDPOINT_URL_S3=https://t3.storage.dev/
AWS_ENDPOINT_URL_IAM=https://fly.iam.storage.tigris.dev/
AWS_REGION=auto

# Prolific API keys are now configured per-organization
# Go to Organization Settings > Integrations to add your Prolific API key

# Environment settings
NODE_ENV=development
DATA_DIR=./data
